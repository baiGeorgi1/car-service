<section id="detailsPage">
  <div id="detailsInfo">
    <h1>Name:{{item.name}}</h1>
    <div class="info"><img src="{{item.image}}" /></div>

    <div class="info">
      <h3>Type: {{item.type}}</h3>
      <h3>Year of Production: {{item.production}}</h3>
      <h3>Years of Exploitation: {{item.exploitation}}</h3>
      <h3>
        Damages:
        {{item.damages}}
      </h3>
      <h3>
        Description:{{item.description}}
      </h3>
      <h2>Price: ${{item.price}}</h2>
    </div>
    {{#if isAuthenticated}}
  
    <div class="buttons">
      {{#if isOwner}}
      <a href="/electronics/edit/{{item._id}}" class="edit-btn">Edit</a>
      <a href="/electronics/delete/{{item._id}}" class="delete-btn">Delete</a>
      {{else}}
      {{#unless isBought}}
      <a href="/electronics/buy/{{item._id}}" class="buy-btn">Buy</a>
      {{else}}
      <p><span class="buy">Thank You For Your Purchase</span></p>
      {{/unless}}
      {{/if}} 
     {{/if}}

    </div>
  </div>
</section>